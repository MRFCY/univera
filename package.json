{
  "name": "univera",
  "description": "An universal application architecture",
  "repository": {
    "type": "git",
    "url": "https://github.com/very-geek/univera.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf output && rimraf public/assets",
    "slate": "rimraf node_modules && npm install",
    "build": "npm run clean && babel server -d output -s -q",
    "build:assets": "cross-env NODE_ENV=development webpack --config config/webpack.babel.js --progress",
    "start": "cross-env NODE_ENV=development nodemon",
    "debug": "cross-env NODE_ENV=debug nodemon",
    "dist": "cross-env NODE_ENV=production npm run build",
    "lint": "cross-env NODE_ENV=development eslint common/** server/** || true",
    "test": "npm run lint"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "bluebird": "^3.3.4",
    "koa": "^2.0.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "mysql2": "^1.0.0-rc.1",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "sequelize": "^3.21.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-async-to-module-method": "^6.7.0",
    "babel-plugin-transform-es2015-destructuring": "^6.6.5",
    "babel-plugin-transform-es2015-function-name": "^6.5.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.7.4",
    "babel-plugin-transform-es2015-parameters": "^6.7.0",
    "babel-plugin-transform-es2015-shorthand-properties": "^6.5.0",
    "babel-plugin-transform-export-extensions": "^6.4.0",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "cross-env": "^1.0.7",
    "eslint": "^2.5.3",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.2.3",
    "json-loader": "^0.5.4",
    "koa-logger": "^2.0.0",
    "nodemon": "^1.9.1",
    "npm-install-webpack-plugin": "^3.0.0",
    "pre-commit": "^1.1.2",
    "rimraf": "^2.5.2",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.6.1"
  }
}

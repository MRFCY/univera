{
  "name": "univera",
  "description": "An universal application architecture",
  "repository": {
    "type": "git",
    "url": "https://github.com/very-geek/univera.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf output",
    "slate": "rimraf node_modules && npm install",
    "build": "npm run clean && babel server -d output -qs",
    "build:assets": "cross-env NODE_ENV=development webpack --config config/webpack.babel.js --progress",
    "start": "cross-env NODE_ENV=development nodemon",
    "debug": "cross-env NODE_ENV=debug nodemon",
    "dist": "cross-env NODE_ENV=production npm run build",
    "lint": "cross-env NODE_ENV=development eslint common/** server/** || true",
    "test": "npm run lint"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "bluebird": "^3.3.4",
    "koa": "^2.0.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "mysql2": "^1.0.0-rc.1",
    "radium": "^0.17.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "sequelize": "^3.21.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "chokidar": "^1.4.3",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.0",
    "devtool": "^1.9.1",
    "eslint": "^2.5.3",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.2.3",
    "file-loader": "^0.8.5",
    "koa-logger": "^2.0.0",
    "localtunnel": "^1.8.1",
    "nodemon": "^1.9.1",
    "npm-install-webpack-plugin": "^3.0.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.0",
    "postcss-url": "^5.1.1",
    "pre-commit": "^1.1.2",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}

---
extends:
  - "eslint:recommended"
parser: "babel-eslint"
parserOptions:
  ecmaVersion: 6
  sourceType: "module"
env:
  es6: true
  node: true
  mocha: true
  browser: true
rules:
  comma-spacing: [warn, {before: false, after: true}]
  comma-style: [warn, last, {exceptions: {VariableDeclaration: true}}]
